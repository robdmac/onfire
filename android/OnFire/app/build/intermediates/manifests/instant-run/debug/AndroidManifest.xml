<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.basicairdata.graziano.onfire"
    android:versionCode="19"
    android:versionName="0.19" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="eu.basicairdata.graziano.onfire.GPSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/gps_logger"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="eu.basicairdata.graziano.onfire.GPSActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.basicairdata.graziano.onfire.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/menu_settings"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.basicairdata.graziano.onfire.GPSActivity" />
        </activity>

        <service
            android:name="eu.basicairdata.graziano.onfire.GPSService"
            android:exported="true" >
            <intent-filter>
                <action android:name="eu.basicairdata.graziano.gpslogger.GPSService" />
            </intent-filter>
        </service>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="eu.basicairdata.graziano.onfire.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>